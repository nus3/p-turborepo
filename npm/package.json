{
  "name": "p-turborepo-yarn",
  "version": "0.0.0",
  "author": "nus3 <hadayota33@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".next/**"
        ]
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "workspaces": [
    "packages/nus3-config",
    "packages/nus3-ui",
    "apps/nus3-a"
  ],
  "devDependencies": {
    "prettier": "^2.5.1",
    "turbo": "^1.0.24"
  }
}
